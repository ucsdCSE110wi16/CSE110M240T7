<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">



    <TextView
        android:textStyle="bold"
        android:textColor="#333333"
        android:textSize="16dp"
        android:text="Ingredient" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#7171F2" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:id="@+id/edit_ingredient_title"/>

    <TextView
        android:textStyle="bold"
        android:textColor="#333333"
        android:textSize="16dp"
        android:text="Metric" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#7171F2" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:id="@+id/edit_ingredient_metric"/>

    <TextView
        android:textStyle="bold"
        android:textColor="#333333"
        android:textSize="16dp"
        android:text="Amount" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#7171F2" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:id="@+id/edit_ingredient_amt"/>

</LinearLayout>